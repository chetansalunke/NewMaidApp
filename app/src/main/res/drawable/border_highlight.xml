<!-- res/drawable/border_highlight.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFFFF" /> <!-- Yellow border color -->
            <stroke android:width="2dp" android:color="#176B87" /> <!-- Red border color -->
        </shape>
    </item>
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#00FFFFFF" />
            <!-- Transparent background when checked -->
        </shape>
    </item>
</layer-list>
